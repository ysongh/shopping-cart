<p id="notice"><%= notice %></p>

<p>Log in as: <%= current_user.username %></p>

<h1>User Information</h1>

<img src="http://tools.finance.gsu.edu/files/2013/04/user-group-icon.png" style="width:290px;height:150px;">
      
<table style = "border-style: dotted solid">
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if user.username == current_user.username || current_user.admin? %>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<br><br>

<p style = "font-size: 22px; font-weight: bold; color: blue">Links</p>

<%= link_to 'List of Items', items_path %>
<%= link_to 'Your Cart', carts_path %>
<%= link_to 'Your Order', orders_path %>

<br><br>
<%= link_to "Logout", 'logout' %>