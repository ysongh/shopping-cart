<p id="notice"><%= notice %></p>

<p>Log in as: <%= current_user.username %></p>

<h1>Your Orders</h1>

<img src="http://www.usc.edu/student-affairs/elrodeo/images/order-button.png" style="width:290px;height:100px;">

<table table style = "border-style: dotted solid">
  <thead>
    <tr>
      <th>Orderdate</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <% if order.user.username == current_user.username || current_user.admin? %>
          <td><%= order.Date %></td>
          <td><%= order.user.username  %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>

<br><br>

<p style = "font-size: 22px; font-weight: bold; color: blue">Links</p>

<%= link_to 'User Information', users_path %>
<%= link_to 'List of Items', items_path %>
<%= link_to 'Your Cart', carts_path %>

<br><br>
<%= link_to "Logout", 'logout' %>