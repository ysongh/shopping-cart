<h1>Your Item</h1>

<table table style = "border-style: dotted solid">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
          <td><%= item.name %></td>
          <td><%= item.inCart %></td>
          <td><%= number_to_currency item.price %></td>
          <td><%= number_to_currency item.inCart * item.price %></td>
      </tr>
    <% end %>
  
  </tbody>
</table>

<br><%= link_to 'Back', orders_path %>